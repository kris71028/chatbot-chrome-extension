{
  "manifest_version": 3,
  "name": "Chatbot Extension",
  "version": "1.0",
  "description": "A simple chatbot extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/lightbulb.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "images/lightbulb.png",
    "48": "images/lightbulb.png",
    "128": "images/lightbulb.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}
